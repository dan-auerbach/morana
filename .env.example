# ============================================================
# MORANA — Environment Variables
# Copy this to .env and fill in your values
# ============================================================

# Database (Neon PostgreSQL — use the -pooler hostname for serverless)
DATABASE_URL="postgresql://user:password@host/dbname?sslmode=require"

# NextAuth
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET=""  # Generate with: openssl rand -base64 32

# Google OAuth (https://console.cloud.google.com → APIs & Services → Credentials)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Access Control — bootstrap emails (comma-separated)
# First email gets admin role. After first sign-in, DB is the sole authority.
ALLOWED_EMAILS="admin@example.com"

# Anthropic (Claude)
ANTHROPIC_API_KEY=""
ANTHROPIC_MODEL="claude-sonnet-4-5-20250929"

# Google Gemini
GEMINI_API_KEY=""
GEMINI_MODEL="gemini-2.0-flash"

# Soniox (Speech-to-Text)
SONIOX_API_KEY=""

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=""

# Cloudflare R2 (S3-compatible object storage)
R2_ENDPOINT=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET="morana"

# Inngest (background jobs — leave empty to disable)
INNGEST_EVENT_KEY=""
INNGEST_SIGNING_KEY=""

# Guardrails
MAX_FILE_SIZE_MB=50          # Max upload size (set to 4 on Vercel due to body limit)
MAX_URL_FETCH_SECONDS=60     # Max time for URL fetching (set to 55 on Vercel)
MAX_TTS_CHARS=10000          # Max characters for TTS
MAX_LLM_PROMPT_CHARS=200000  # Max characters for LLM prompt
MAX_RUNS_PER_DAY_PER_USER=200
GLOBAL_MAX_MONTHLY_COST_CENTS=30000  # $300 monthly cap across all users
