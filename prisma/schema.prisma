generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  user
  admin
}

enum RunType {
  stt
  llm
  tts
  image
}

enum RunStatus {
  queued
  running
  done
  error
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  role          Role      @default(user)
  active        Boolean   @default(true)
  createdAt     DateTime  @default(now())
  lastLoginAt   DateTime  @default(now())

  // Per-user limits (null = use global defaults)
  maxRunsPerDay         Int?   // override global daily limit
  maxMonthlyCostCents   Int?   // monthly cost cap in CENTS (integer, no float rounding)
  allowedModels         Json?  // JSON array of model ID strings, null = all models allowed

  runs          Run[]
  files         File[]
  usageEvents   UsageEvent[]
  accounts      Account[]
  sessions      Session[]
  conversations Conversation[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Conversation {
  id        String   @id @default(cuid())
  userId    String
  title     String   @default("New conversation")
  modelId   String   @default("claude-sonnet-4-5-20250929")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id])
  messages Message[]

  @@index([userId, updatedAt])
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  role           String   // "user" | "assistant"
  content        String   @db.Text
  inputTokens    Int?
  outputTokens   Int?
  latencyMs      Int?
  runId          String?
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  run          Run?         @relation(fields: [runId], references: [id])

  @@index([conversationId, createdAt])
}

model Run {
  id             String    @id @default(cuid())
  userId         String
  type           RunType
  status         RunStatus @default(queued)
  provider       String
  model          String
  createdAt      DateTime  @default(now())
  finishedAt     DateTime?
  errorMessage   String?   @db.Text
  idempotencyKey String?   @unique

  user     User         @relation(fields: [userId], references: [id])
  input    RunInput?
  output   RunOutput?
  files    File[]
  usage    UsageEvent[]
  messages Message[]

  @@index([userId, createdAt])
  @@index([status])
}

model RunInput {
  id          String @id @default(cuid())
  runId       String @unique
  payloadJson Json

  run Run @relation(fields: [runId], references: [id], onDelete: Cascade)
}

model RunOutput {
  id          String @id @default(cuid())
  runId       String @unique
  payloadJson Json

  run Run @relation(fields: [runId], references: [id], onDelete: Cascade)
}

enum FileKind {
  input
  output
}

model File {
  id         String   @id @default(cuid())
  userId     String
  runId      String?
  kind       FileKind
  mime       String
  size       Int
  storageKey String
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  run  Run? @relation(fields: [runId], references: [id])

  @@index([userId])
  @@index([runId])
}

model UsageEvent {
  id                String   @id @default(cuid())
  runId             String?
  userId            String
  provider          String
  model             String
  unitsJson         Json
  costEstimateCents Int      @default(0)  // cost in CENTS (integer, no float rounding)
  latencyMs         Int      @default(0)
  createdAt         DateTime @default(now())

  run  Run?  @relation(fields: [runId], references: [id])
  user User  @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@index([provider])
}
