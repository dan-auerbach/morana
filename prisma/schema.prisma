generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  user
  admin
}

enum RunType {
  stt
  llm
  tts
  image
}

enum RunStatus {
  queued
  running
  done
  error
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  role          Role      @default(user)
  active        Boolean   @default(true)
  createdAt     DateTime  @default(now())
  lastLoginAt   DateTime  @default(now())

  // Per-user limits (null = use global defaults)
  maxRunsPerDay         Int?   // override global daily limit
  maxMonthlyCostCents   Int?   // monthly cost cap in CENTS (integer, no float rounding)
  allowedModels         Json?  // JSON array of model ID strings, null = all models allowed

  runs              Run[]
  files             File[]
  usageEvents       UsageEvent[]
  accounts          Account[]
  sessions          Session[]
  conversations     Conversation[]
  promptTemplates   PromptTemplate[]
  knowledgeBases    KnowledgeBase[]
  recipes           Recipe[]
  recipeExecutions  RecipeExecution[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Conversation {
  id               String   @id @default(cuid())
  userId           String
  title            String   @default("New conversation")
  modelId          String   @default("claude-sonnet-4-5-20250929")
  templateId       String?
  knowledgeBaseIds Json?    // JSON array of KnowledgeBase IDs
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id])
  messages Message[]

  @@index([userId, updatedAt])
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  role           String   // "user" | "assistant"
  content        String   @db.Text
  inputTokens    Int?
  outputTokens   Int?
  latencyMs      Int?
  runId          String?
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  run          Run?         @relation(fields: [runId], references: [id])

  @@index([conversationId, createdAt])
}

model Run {
  id             String    @id @default(cuid())
  userId         String
  type           RunType
  status         RunStatus @default(queued)
  provider       String
  model          String
  createdAt      DateTime  @default(now())
  finishedAt     DateTime?
  errorMessage   String?   @db.Text
  idempotencyKey String?   @unique

  user             User               @relation(fields: [userId], references: [id])
  input            RunInput?
  output           RunOutput?
  files            File[]
  usage            UsageEvent[]
  messages         Message[]
  recipeStepResults RecipeStepResult[]

  @@index([userId, createdAt])
  @@index([status])
}

model RunInput {
  id          String @id @default(cuid())
  runId       String @unique
  payloadJson Json

  run Run @relation(fields: [runId], references: [id], onDelete: Cascade)
}

model RunOutput {
  id          String @id @default(cuid())
  runId       String @unique
  payloadJson Json

  run Run @relation(fields: [runId], references: [id], onDelete: Cascade)
}

enum FileKind {
  input
  output
}

model File {
  id         String   @id @default(cuid())
  userId     String
  runId      String?
  kind       FileKind
  mime       String
  size       Int
  storageKey String
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  run  Run? @relation(fields: [runId], references: [id])

  @@index([userId])
  @@index([runId])
}

model UsageEvent {
  id                String   @id @default(cuid())
  runId             String?
  userId            String
  provider          String
  model             String
  unitsJson         Json
  costEstimateCents Int      @default(0)  // cost in CENTS (integer, no float rounding)
  latencyMs         Int      @default(0)
  createdAt         DateTime @default(now())

  run  Run?  @relation(fields: [runId], references: [id])
  user User  @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@index([provider])
}

model PromptTemplate {
  id                 String   @id @default(cuid())
  name               String
  slug               String   @unique
  description        String?  @db.Text
  systemPrompt       String   @db.Text
  userPromptTemplate String?  @db.Text
  category           String   @default("general")
  knowledgeText      String?  @db.Text
  isActive           Boolean  @default(true)
  sortOrder          Int      @default(0)
  createdBy          String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  creator User @relation(fields: [createdBy], references: [id])

  @@index([category])
  @@index([isActive, sortOrder])
}

model KnowledgeBase {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  isActive    Boolean  @default(true)
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  creator   User       @relation(fields: [createdBy], references: [id])
  documents Document[]
}

enum DocumentStatus {
  pending
  processing
  ready
  error
}

model Document {
  id              String         @id @default(cuid())
  knowledgeBaseId String
  fileName        String
  mimeType        String
  sizeBytes       Int
  storageKey      String
  status          DocumentStatus @default(pending)
  chunkCount      Int            @default(0)
  errorMessage    String?        @db.Text
  createdAt       DateTime       @default(now())

  knowledgeBase KnowledgeBase  @relation(fields: [knowledgeBaseId], references: [id], onDelete: Cascade)
  chunks        DocumentChunk[]

  @@index([knowledgeBaseId])
}

model DocumentChunk {
  id         String @id @default(cuid())
  documentId String
  content    String @db.Text
  chunkIndex Int
  // embedding vector(1536) — added via raw SQL migration (pgvector)

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
}

enum RecipeStatus {
  draft
  active
  archived
}

model Recipe {
  id          String       @id @default(cuid())
  name        String
  slug        String       @unique
  description String?      @db.Text
  status      RecipeStatus @default(draft)
  createdBy   String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  creator    User              @relation(fields: [createdBy], references: [id])
  steps      RecipeStep[]
  executions RecipeExecution[]

  @@index([status])
}

model RecipeStep {
  id        String @id @default(cuid())
  recipeId  String
  stepIndex Int
  name      String
  type      String   // "stt", "llm", "tts", "image", "output_format"
  config    Json     // Step-specific config

  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@unique([recipeId, stepIndex])
  @@index([recipeId])
}

enum ExecutionStatus {
  pending
  running
  done
  error
  cancelled
}

model RecipeExecution {
  id          String          @id @default(cuid())
  recipeId    String
  userId      String
  status      ExecutionStatus @default(pending)
  progress    Int             @default(0)
  currentStep Int             @default(0)
  totalSteps  Int
  inputData   Json?           // Initial input (e.g. file reference, text)
  startedAt   DateTime        @default(now())
  finishedAt  DateTime?
  errorMessage String?        @db.Text

  recipe      Recipe              @relation(fields: [recipeId], references: [id])
  user        User                @relation(fields: [userId], references: [id])
  stepResults RecipeStepResult[]

  @@index([userId, startedAt])
  @@index([status])
}

model RecipeStepResult {
  id            String    @id @default(cuid())
  executionId   String
  stepIndex     Int
  runId         String?
  status        String    @default("pending")
  inputPreview  String?   @db.Text
  outputPreview String?   @db.Text
  outputFull    Json?
  startedAt     DateTime?
  finishedAt    DateTime?
  errorMessage  String?   @db.Text

  execution RecipeExecution @relation(fields: [executionId], references: [id], onDelete: Cascade)
  run       Run?            @relation(fields: [runId], references: [id])

  @@unique([executionId, stepIndex])
  @@index([executionId])
}

// ─── Auth Logging ───────────────────────────────────────────────

model AuthLog {
  id        String   @id @default(cuid())
  email     String
  event     String   // "sign_in_ok", "sign_in_denied_inactive", "sign_in_denied_unknown", "sign_in_error", "sign_in_bootstrap"
  provider  String   @default("google")
  ip        String?
  userAgent String?  @db.Text
  country   String?  // from Vercel geo headers
  city      String?
  reason    String?  // denial reason
  createdAt DateTime @default(now())

  @@index([email])
  @@index([createdAt])
  @@index([event])
}
