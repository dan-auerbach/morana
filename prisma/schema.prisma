generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  user
  admin
}

enum RunType {
  stt
  llm
  tts
  image
  sfx
  video
}

enum RunStatus {
  queued
  running
  done
  error
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  role          Role      @default(user)
  active        Boolean   @default(true)
  createdAt     DateTime  @default(now())
  lastLoginAt   DateTime  @default(now())

  // Per-user limits (null = use global defaults)
  maxRunsPerDay         Int?   // override global daily limit
  maxMonthlyCostCents   Int?   // monthly cost cap in CENTS (integer, no float rounding)
  allowedModels         Json?  // JSON array of model ID strings, null = all models allowed

  // Active workspace selection (cookie-backed, DB persisted)
  activeWorkspaceId     String?

  runs              Run[]
  files             File[]
  usageEvents       UsageEvent[]
  accounts          Account[]
  sessions          Session[]
  conversations     Conversation[]
  promptTemplates   PromptTemplate[]
  knowledgeBases    KnowledgeBase[]
  recipes           Recipe[]
  recipeExecutions  RecipeExecution[]
  workspaceMemberships WorkspaceMember[]
  templateVersions  PromptTemplateVersion[]
  recipeVersions    RecipeVersion[]
  telegramLink      TelegramLink?
  telegramLinkCodes TelegramLinkCode[]

  activeWorkspace   Workspace? @relation("UserActiveWorkspace", fields: [activeWorkspaceId], references: [id])
}

// ─── Workspace / Multi-tenancy ────────────────────────────────
model Workspace {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Workspace-level policy
  maxMonthlyCostCents Int?   // workspace monthly cost cap in CENTS
  allowedModels       Json?  // JSON array of model IDs; null = all allowed

  members         WorkspaceMember[]
  conversations   Conversation[]
  promptTemplates PromptTemplate[]
  knowledgeBases  KnowledgeBase[]
  recipes         Recipe[]
  runs            Run[]
  usageEvents     UsageEvent[]
  usersActive     User[]  @relation("UserActiveWorkspace")
  drupalIntegration IntegrationDrupal?

  @@index([slug])
}

enum WorkspaceRole {
  member
  admin
}

model WorkspaceMember {
  id          String        @id @default(cuid())
  workspaceId String
  userId      String
  role        WorkspaceRole @default(member)
  createdAt   DateTime      @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@index([userId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Conversation {
  id               String   @id @default(cuid())
  userId           String
  workspaceId      String?
  title            String   @default("New conversation")
  modelId          String   @default("claude-sonnet-4-5-20250929")
  templateId       String?
  knowledgeBaseIds Json?    // JSON array of KnowledgeBase IDs
  webSearchEnabled Boolean  @default(false)  // OpenAI web search mode
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id])
  workspace Workspace? @relation(fields: [workspaceId], references: [id])
  messages  Message[]

  @@index([userId, updatedAt])
  @@index([workspaceId])
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  role           String   // "user" | "assistant"
  content        String   @db.Text
  inputTokens    Int?
  outputTokens   Int?
  latencyMs      Int?
  runId          String?
  citationsJson  Json?    // [{ url, title }] — web search citations
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  run          Run?         @relation(fields: [runId], references: [id])

  @@index([conversationId, createdAt])
}

model Run {
  id             String    @id @default(cuid())
  userId         String
  workspaceId    String?
  type           RunType
  status         RunStatus @default(queued)
  provider       String
  model          String
  createdAt      DateTime  @default(now())
  finishedAt     DateTime?
  errorMessage   String?   @db.Text
  idempotencyKey String?   @unique
  providerJobId  String?              // External job ID (e.g. fal.ai queue request_id)

  user             User               @relation(fields: [userId], references: [id])
  workspace        Workspace?         @relation(fields: [workspaceId], references: [id])
  input            RunInput?
  output           RunOutput?
  files            File[]
  usage            UsageEvent[]
  messages         Message[]
  recipeStepResults RecipeStepResult[]

  @@index([userId, createdAt])
  @@index([workspaceId])
  @@index([status])
}

model RunInput {
  id          String @id @default(cuid())
  runId       String @unique
  payloadJson Json

  run Run @relation(fields: [runId], references: [id], onDelete: Cascade)
}

model RunOutput {
  id          String @id @default(cuid())
  runId       String @unique
  payloadJson Json

  run Run @relation(fields: [runId], references: [id], onDelete: Cascade)
}

enum FileKind {
  input
  output
}

model File {
  id         String   @id @default(cuid())
  userId     String
  runId      String?
  kind       FileKind
  mime       String
  size       Int
  storageKey String
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  run  Run? @relation(fields: [runId], references: [id])

  @@index([userId])
  @@index([runId])
}

model UsageEvent {
  id                String   @id @default(cuid())
  runId             String?
  userId            String
  workspaceId       String?
  provider          String
  model             String
  unitsJson         Json
  costEstimateCents Int      @default(0)  // cost in CENTS (integer, no float rounding)
  latencyMs         Int      @default(0)
  createdAt         DateTime @default(now())

  run       Run?       @relation(fields: [runId], references: [id])
  user      User       @relation(fields: [userId], references: [id])
  workspace Workspace? @relation(fields: [workspaceId], references: [id])

  @@index([userId, createdAt])
  @@index([workspaceId, createdAt])
  @@index([provider])
}

model PromptTemplate {
  id                 String   @id @default(cuid())
  workspaceId        String?
  name               String
  slug               String   @unique
  description        String?  @db.Text
  systemPrompt       String   @db.Text
  userPromptTemplate String?  @db.Text
  category           String   @default("general")
  knowledgeText      String?  @db.Text
  isActive           Boolean  @default(true)
  sortOrder          Int      @default(0)
  currentVersion     Int      @default(1)
  createdBy          String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  creator   User                    @relation(fields: [createdBy], references: [id])
  workspace Workspace?              @relation(fields: [workspaceId], references: [id])
  versions  PromptTemplateVersion[]

  @@index([workspaceId])
  @@index([category])
  @@index([isActive, sortOrder])
}

// ─── Prompt Template Versioning ─────────────────────────────
model PromptTemplateVersion {
  id                 String   @id @default(cuid())
  templateId         String
  versionNumber      Int
  systemPrompt       String   @db.Text
  userPromptTemplate String?  @db.Text
  knowledgeText      String?  @db.Text
  category           String   @default("general")
  description        String?  @db.Text
  createdBy          String
  createdAt          DateTime @default(now())

  template PromptTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  author   User           @relation(fields: [createdBy], references: [id])

  @@unique([templateId, versionNumber])
  @@index([templateId])
}

model KnowledgeBase {
  id          String   @id @default(cuid())
  workspaceId String?
  name        String
  description String?  @db.Text
  isActive    Boolean  @default(true)
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  creator   User       @relation(fields: [createdBy], references: [id])
  workspace Workspace? @relation(fields: [workspaceId], references: [id])
  documents Document[]

  @@index([workspaceId])
}

enum DocumentStatus {
  pending
  processing
  ready
  error
}

model Document {
  id              String         @id @default(cuid())
  knowledgeBaseId String
  fileName        String
  mimeType        String
  sizeBytes       Int
  storageKey      String
  status          DocumentStatus @default(pending)
  chunkCount      Int            @default(0)
  errorMessage    String?        @db.Text
  createdAt       DateTime       @default(now())

  knowledgeBase KnowledgeBase  @relation(fields: [knowledgeBaseId], references: [id], onDelete: Cascade)
  chunks        DocumentChunk[]

  @@index([knowledgeBaseId])
}

model DocumentChunk {
  id         String @id @default(cuid())
  documentId String
  content    String @db.Text
  chunkIndex Int
  // embedding vector(1536) — added via raw SQL migration (pgvector)

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
}

enum RecipeStatus {
  draft
  active
  archived
}

model Recipe {
  id             String       @id @default(cuid())
  workspaceId    String?
  name           String
  slug           String       @unique
  description    String?      @db.Text
  status         RecipeStatus @default(draft)
  isPreset       Boolean      @default(false)  // true for system presets (e.g. NOVINAR)
  presetKey      String?      @unique          // unique preset identifier
  inputKind      String       @default("text") // "text", "audio", "image", "none"
  inputModes     Json?                         // JSON array: ["file","url","text"] — allowed input modes
  defaultLang    String?                       // default language hint (e.g. "sl", "en")
  uiHints        Json?                         // UI hints for the recipe frontend
  currentVersion Int          @default(1)      // auto-increment on step changes
  createdBy      String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  creator    User              @relation(fields: [createdBy], references: [id])
  workspace  Workspace?        @relation(fields: [workspaceId], references: [id])
  steps      RecipeStep[]
  executions RecipeExecution[]
  versions   RecipeVersion[]

  @@index([workspaceId])
  @@index([status])
}

model RecipeStep {
  id        String @id @default(cuid())
  recipeId  String
  stepIndex Int
  name      String
  type      String   // "stt", "llm", "tts", "image", "output_format"
  config    Json     // Step-specific config

  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@unique([recipeId, stepIndex])
  @@index([recipeId])
}

enum ExecutionStatus {
  pending
  running
  done
  error
  cancelled
}

model RecipeExecution {
  id               String          @id @default(cuid())
  recipeId         String
  userId           String
  status           ExecutionStatus @default(pending)
  progress         Int             @default(0)
  currentStep      Int             @default(0)
  totalSteps       Int
  inputData        Json?           // Initial input (e.g. file reference, text)
  recipeVersion    Int?            // Recipe version used for this execution
  totalCostCents   Int             @default(0)  // Aggregated cost in CENTS
  costBreakdownJson Json?          // { steps: [{ stepIndex, model, costCents }] }
  confidenceScore  Int?            // 0-100, extracted from fact-check step
  warningFlag      String?         // null | "needs_review" | "high_risk"
  previewHash      String?         @unique  // Short hash for public preview URL
  previewUrl       String?         // Full public preview URL
  startedAt        DateTime        @default(now())
  finishedAt       DateTime?
  errorMessage     String?         @db.Text

  recipe      Recipe              @relation(fields: [recipeId], references: [id])
  user        User                @relation(fields: [userId], references: [id])
  stepResults RecipeStepResult[]
  telegramMap TelegramExecutionMap?

  @@index([userId, startedAt])
  @@index([status])
}

model RecipeStepResult {
  id                String    @id @default(cuid())
  executionId       String
  stepIndex         Int
  runId             String?
  status            String    @default("pending")
  inputPreview      String?   @db.Text
  outputPreview     String?   @db.Text
  outputFull        Json?
  inputHash         String?   // SHA256 of input text (audit trail)
  outputHash        String?   // SHA256 of output text (audit trail)
  providerResponseId String?  // Provider's response ID (audit trail)
  startedAt         DateTime?
  finishedAt        DateTime?
  errorMessage      String?   @db.Text

  execution RecipeExecution @relation(fields: [executionId], references: [id], onDelete: Cascade)
  run       Run?            @relation(fields: [runId], references: [id])

  @@unique([executionId, stepIndex])
  @@index([executionId])
}

// ─── Recipe Versioning ──────────────────────────────────────────
model RecipeVersion {
  id            String   @id @default(cuid())
  recipeId      String
  versionNumber Int
  stepsSnapshot Json     // Full snapshot of steps at this version
  name          String   // Recipe name at this version
  description   String?  @db.Text
  changedBy     String
  changeNote    String?  // Optional description of what changed
  createdAt     DateTime @default(now())

  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  author User   @relation(fields: [changedBy], references: [id])

  @@unique([recipeId, versionNumber])
  @@index([recipeId])
}

// ─── AI Model Configuration (DB-driven) ────────────────────────
model AIModel {
  id            String   @id @default(cuid())
  modelId       String   @unique    // e.g. "claude-sonnet-4-5-20250929"
  label         String              // Display name
  provider      String              // "anthropic", "openai", "gemini"
  isEnabled     Boolean  @default(true)
  isDefault     Boolean  @default(false)
  sortOrder     Int      @default(0)
  pricingInput  Float    @default(0)   // Per-unit input cost (dollars)
  pricingOutput Float    @default(0)   // Per-unit output cost (dollars)
  pricingUnit   String   @default("1M_tokens") // "1M_tokens", "1k_chars", "per_minute"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([isEnabled, sortOrder])
}

// ─── Auth Logging ───────────────────────────────────────────────

model AuthLog {
  id        String   @id @default(cuid())
  email     String
  event     String   // "sign_in_ok", "sign_in_denied_inactive", "sign_in_denied_unknown", "sign_in_error", "sign_in_bootstrap"
  provider  String   @default("google")
  ip        String?
  userAgent String?  @db.Text
  country   String?  // from Vercel geo headers
  city      String?
  reason    String?  // denial reason
  createdAt DateTime @default(now())

  @@index([email])
  @@index([createdAt])
  @@index([event])
}

// ─── Telegram Integration ──────────────────────────────────────────

model TelegramLink {
  id               String   @id @default(cuid())
  userId           String   @unique          // 1 user = 1 Telegram link
  telegramChatId   String   @unique          // Telegram chat ID (string, can be large)
  telegramUsername  String?                  // @username for display
  linkedAt         DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model TelegramLinkCode {
  id        String    @id @default(cuid())
  userId    String
  code      String    @unique              // 6-digit code
  expiresAt DateTime                       // 5 min TTL
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([code])
  @@index([expiresAt])
}

// ─── Drupal Integration ──────────────────────────────────────────

model IntegrationDrupal {
  id                String   @id @default(cuid())
  workspaceId       String
  name              String   @default("Drupal")
  baseUrl           String               // e.g. https://drupal.domain.tld
  adapterType       String   @default("jsonapi")  // "jsonapi" | "custom_rest"
  authType          String   @default("bearer_token") // "basic" | "bearer_token"
  credentialsEnc    String?  @db.Text     // AES-256-GCM encrypted JSON { username?, password?, token? }
  defaultContentType String  @default("article")
  fieldMap          Json?                 // custom field mapping overrides
  bodyFormat        String   @default("full_html") // Drupal text format
  isEnabled         Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId])  // one Drupal integration per workspace
  @@index([workspaceId])
}

model TelegramExecutionMap {
  id          String   @id @default(cuid())
  executionId String   @unique
  chatId      String                       // Telegram chat ID
  messageId   Int                          // Telegram message ID for editing
  createdAt   DateTime @default(now())

  execution RecipeExecution @relation(fields: [executionId], references: [id], onDelete: Cascade)

  @@index([executionId])
}
